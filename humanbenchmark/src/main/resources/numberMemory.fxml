<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<StackPane fx:id="root"
           xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="main.backend.NumberMemory"
           style="-fx-background-color: teal; -fx-background-radius: 100">

    <VBox alignment="CENTER" spacing="20">

        <Text textAlignment="CENTER" fill="white"
              style="-fx-font-size: 42"
              text="Number Memory"/>

        <Text text="The average person can remember 7 numbers at once. Can you do more?"
              textAlignment="CENTER" fill="white" style="-fx-font-size: 27"/>

        <Button fx:id="start" text="Start" style="-fx-background-color: yellow; -fx-font-size: 22 "
                onAction="#startPressed"/>

    </VBox>
</StackPane>
